<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark">

      <span class="navbar-text">
        <h4>Beer-Commerce</h4>
      </span>
      <span class="navbar-text">
        <h4><%= link_to "Home", products_path %></h4>
      </span>
      <span class="navbar-text">
        <h4><%= link_to "Cart", cart_path %></h4>
      </span>
      <span class="navbar-text newProduct">
        <h4><%= link_to "Add New Product", new_product_path %></h4>
      </span>
      <span class="navbar-text">
        <% if can? :manage, User %>
        <%= link_to rails_admin_path, class: 'login-button' do %><h4>Dashboard</h4><% end %>
        <% end %>
      </span>
      <% if user_signed_in? %>
      <span class="navbar-text">
        <h4><%= link_to('Edit registration', edit_user_registration_path) %></h4>
      </span>
      <span class="navbar-text">
        <h4><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></h4>
      </span>
      <% else %>
      <span class="navbar-text">
        <h4><%= link_to('Register', new_user_registration_path)  %></h4>
      </span>
      <span class="navbar-text">
        <h4><%= link_to('Login', new_user_session_path)  %></h4>
      </span>
      <% end %>
    </nav>
    <div class="container">

      <% if can? :manage, User %>
      <div class="alert alert-success" role="alert">
      	<p>Visible only for superadmins and supervisors! Using CanCanCan </p>
      </div>
      <% end %>


      <% if current_user.nil? %>
      	<%= link_to new_user_session_path, class: 'login-button' do %>Sign in  <% end %>

      <% end %>


      <% unless flash.empty? %>
       <script type="text/javascript">
            <% flash.each do |f| %>
  	      <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
  	     	 toastr['<%= type %>']('<%= f[1] %>');
  	   <% end %>
       </script>
       <% end %>
      <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
